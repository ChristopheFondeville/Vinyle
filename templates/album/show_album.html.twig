{% extends 'base_dashboard.html.twig' %}

{% block title %}{{ vinyl.titre }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="text-center bg-secondaryColor p-3 text-white rounded-top">
                    <i class="bi bi-vinyl"></i> {{ vinyl.artist.firstname|capitalize }} {{ vinyl.artist.lastname|capitalize }}
                    - {{ vinyl.titre|capitalize }}
                </div>
                <div class="card-body d-flex flex-row">
                    <div>
                        <div class="d-flex flex-row">
                            <img src="{{ asset('uploads/covers/'~vinyl.coverFront) }}"
                                 alt="{{ vinyl.titre|capitalize }}"
                                 class="img-thumbnail" title="{{ vinyl.titre|capitalize }}" width="20%">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Artiste
                                    : <a href="{{ path('app_artist_show', {'id': vinyl.artist.id}) }}"> {{ vinyl.artist.firstname|capitalize }} {{ vinyl.artist.lastname|capitalize }}</a></li>
                                <li class="list-group-item">Genre: {{ vinyl.genre.genreName|capitalize }}</li>
                                <li class="list-group-item">Date: {{ vinyl.date|date('Y') }}</li>
                            </ul>
                        </div>
                        <p>{{ vinyl.tracklist|raw }}</p>
                    </div>
                    {% if vinyl.spotify %}
                        <div class="card">
                            <div class="rounded-top bg-primaryColor p-2 text-white text-center">
                                <i class="bi bi-spotify"></i> Spotify
                            </div>

                            <div class="card-body">
                                {{ vinyl.spotify|raw }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}