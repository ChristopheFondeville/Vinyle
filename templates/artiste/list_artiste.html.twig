{% extends 'base_dashboard.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="text-center bg-secondaryColor p-3 text-white rounded-top">
                    <i class="bi bi-card-list"></i> Liste des artistes
                </div>
                <div class="card-body d-flex flex-column ">
                    <div class="text-center">
                        <div>
                            {% for letter in 'a'..'z' %}
                                | <a
                                    href="{{ path('app_artiste_letter', {'letter':letter}) }}">{{ letter|capitalize }}</a>
                            {% endfor %}
                        </div>
                    </div>
                    <hr class="border border-1 border-bottom-dark">
                    <div>
                        {% if app.request.get('letter') %}
                            <ul class="list-group list-group-flush">
                                {% if artistes %}
                                    {% for artiste in artistes %}
                                        <li class="list-group-item"><img src="{{ asset('uploads/artists/'~artiste.picture) }}" alt="{{ artiste.firstname }}" class="img-thumbnail" width="5%"> <a href="{{ path('app_artiste_show', {'id':artiste.id}) }}" class="">{{ artiste.firstname }}</a></li>
                                    {% endfor %}
                                {% else %}
                                    <li class="list-group-item">Aucun r√©sultat</li>
                                {% endif %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}