{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container mt-5 py-5">
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="card">
                    <div class="text-center">
                        <h5 class="card-header">Connexion</h5>
                    </div>
                    <div class="card-body">
                        <form action="{{ path('app_login') }}" method="post">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <input type="email" class="form-control" id="username" name="_username" placeholder="Email">
                                </li>
                                <li class="list-group-item">
                                    <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe">
                                </li>
                                <li class="list-group-item text-center pt-4">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <button class="btn btn-dark" type="submit">Connexion</button>
                                </li>
                            </ul>
                            <div class="text-center pt-3">
                                <p>Vous n'avez pas de compte, <a href="{{ path('app_register') }}">Enregistrez-vous!</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
